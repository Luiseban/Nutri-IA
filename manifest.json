  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage", "https://drive.google.com/drive/folders/14a3NkYsIXUNXmcPYJund-iBxnAXFvn-6?usp=share_link"]
}