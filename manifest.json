{
  "name": "NUTRI-IA Nutritionist",
  "version": "1.0",
  "description": "Get personalized nutrition advice from ChatGPT",
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
